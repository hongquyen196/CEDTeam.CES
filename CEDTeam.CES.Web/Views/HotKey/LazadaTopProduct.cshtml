@model List<String>;
@{
    ViewData["Title"] = "Các sản phẩm hàng đầu trên Lazada";
}
<style>
    .hot-product{
        margin-top: 1px;
        text-transform: capitalize;
    }
</style>
<div class="container-fluid">
    @foreach (var item in Model)
    {
        <button onclick="getProductByCategory('@item')" type="button" class="btn btn-outline-secondary hot-product">@item</button>
    }
</div>
<div id="product-datatable-content"></div>
<script>
    function getProductByCategory(name) {
        LoadPartialViewWithAjax("#product-datatable-content", "/HotKey/LazadaTopProductByCategory?name=" + name, "GET");
    };
</script>
