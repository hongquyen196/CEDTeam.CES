<h1>Product Manager</h1>
<link href="https://cdn.datatables.net/1.10.20/css/jquery.dataTables.min.css" rel="stylesheet" />
<script src="/lib/jquery/dist/jquery.js"></script>
<table id="product-datatable">
    <thead>
        <tr>
            <th>Id</th>
            <th>ProductId</th>
            <th>Name</th>
            <th>Price</th>
            <th>CreatedDate</th>
            <th>Quantity</th>
            <th>CategoryId</th>
            <th>QuantitySold</th>
            <th>CommentCount</th>
            <th>Discount</th>
            <th>Url</th>
        </tr>
    </thead>
    <tfoot>
        <tr>
            <th>Id</th>
            <th>ProductId</th>
            <th>Name</th>
            <th>Price</th>
            <th>CreatedDate</th>
            <th>Quantity</th>
            <th>CategoryId</th>
            <th>QuantitySold</th>
            <th>CommentCount</th>
            <th>Discount</th>
            <th>Url</th>
        </tr>
    </tfoot>
</table>
<script>
    $(function () {
        var table = $('#product-datatable').DataTable({
            responsive: true,
            pageLength: 10,
            "processing": true,
            "serverSide": true,
            "ajax": {
                url: "../product-manager/get-product",
                data: function (d) {
                    d._csrf = "<?= Yii::$app->request->getCsrfToken(); ?>";
                },
                dataFilter: function (data) {
                    var json = jQuery.parseJSON(data);
                    console.log(json);
                    json.recordsTotal = json.recordsTotal;
                    json.recordsFiltered = json.recordsFiltered;
                    json.data = json.data;
                    return JSON.stringify(json);
                }
            },
            "columns": [
                { "data": "productid" },
                { "data": "name" },
                { "data": "price" },
                { "data": "createddate" },
                { "data": "quantity" },
                { "data": "categoryid" },
                { "data": "quantitysold" },
                { "data": "commentcount" },
                { "data": "discount" },
                { "data": "url" }
            ]
            });
    });
</script>